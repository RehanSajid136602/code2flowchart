rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Basic owner check
    function isOwner(uid) {
      return request.auth != null && request.auth.uid == uid;
    }

    // Flexible date check
    function isDate(val) {
      return val is timestamp || val is number;
    }

    // Projects & Subcollections
    match /users/{userId}/{allPaths=**} {
      allow read, write: if isOwner(userId);
    }
    
    // Explicitly allow project content validation if needed
    match /users/{userId}/projects/{projectId} {
      allow create, update: if isOwner(userId)
        && (request.resource.data.updatedAt is timestamp || request.resource.data.updatedAt is number);
    }

    // Public projects (if implemented later)
    match /public_projects/{projectId} {
      allow read: if true;
      allow write: if false;
    }
  }
}
